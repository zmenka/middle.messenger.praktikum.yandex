{
  "name": "middle.messenger.praktikum.yandex",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "tsc -p ./client/tsconfig-client.json --noEmit && vite build",
    "start": "npm run build && ts-node --esm  --project ./server/tsconfig-server.json ./server/server.ts",
    "dev": "vite",
    "lint": "npm run eslint && npm run stylelint",
    "eslint": "eslint --ignore-path .gitignore --ext .ts . --fix",
    "stylelint": "stylelint --ignore-path .gitignore \"**/*.css\" --fix"
  },
  "devDependencies": {
    "@types/express": "^4.17.20",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "postcss": "^8.4.31",
    "postcss-css-variables": "^0.19.0",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-order": "^6.0.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-handlebars": "^1.6.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ts-node": "^10.9.1",
    "uuid": "^9.0.1"
  }
}
